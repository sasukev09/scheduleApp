                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="userLocationText" prefHeight="30.0" prefWidth="180.0" text="Location">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
